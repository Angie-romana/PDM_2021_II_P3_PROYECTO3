<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    tools:context=".ExpedienteActivity">

    <TextView
        android:id="@+id/txvTituloExpediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Expedientes"
        android:textColor="@color/white"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.391"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtIdExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="245dp"
        android:ems="10"
        android:hint="Id de expediente"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtEntidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Entidad"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="@+id/txtIdExp"
        app:layout_constraintTop_toBottomOf="@+id/txtIdExp" />

    <EditText
        android:id="@+id/txtNumExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Numero de expediente"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="@+id/txtEntidad"
        app:layout_constraintTop_toBottomOf="@+id/txtEntidad" />

    <Button
        android:id="@+id/btnGuardarExp"
        android:layout_width="63dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/guardar"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnActualizarExp"
        app:layout_constraintEnd_toStartOf="@+id/btnActualizarExp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnActualizarExp"
        android:layout_width="62dp"
        android:layout_height="53dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/actualizar"
        app:layout_constraintEnd_toStartOf="@+id/btnEliminarExp"
        app:layout_constraintStart_toEndOf="@+id/btnGuardarExp"
        app:layout_constraintTop_toTopOf="@+id/btnEliminarExp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnEliminarExp"
        android:layout_width="74dp"
        android:layout_height="71dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="158dp"
        android:background="@drawable/eliminar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnActualizarExp"
        app:layout_constraintTop_toBottomOf="@+id/txtEntidad"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>