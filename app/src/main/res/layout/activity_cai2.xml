<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnGetIdC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="151dp"
        android:layout_marginTop="106dp"
        android:text="Get Id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGetAllC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="39dp"
        android:text="Get All"
        app:layout_constraintStart_toStartOf="@+id/btnGetIdC"
        app:layout_constraintTop_toBottomOf="@+id/btnGetIdC" />

    <Button
        android:id="@+id/btnPostearC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="42dp"
        android:text="Post"
        app:layout_constraintBottom_toTopOf="@+id/btnPutC"
        app:layout_constraintEnd_toEndOf="@+id/btnPutC" />

    <Button
        android:id="@+id/btnPutC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:text="Put"
        app:layout_constraintBottom_toTopOf="@+id/btnDeleteC"
        app:layout_constraintStart_toStartOf="@+id/btnDeleteC" />

    <Button
        android:id="@+id/btnDeleteC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="214dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>